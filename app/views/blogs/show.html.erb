<div class="container mt-4">

  <div class="text-center">
    <p>
      <strong>タイトル</strong>
      <%= @blog.title %>
    </p>

    <p>
      <strong>時間</strong>
      <%= @blog.start_time.strftime("%Y-%m-%d %H:%M") %>
    </p>

    <p>
      <strong>内容</strong>
      <%= @blog.content %>
    </p>

    <%= link_to '編集する', edit_blog_path(@blog) %> |
    <%= link_to '削除する', blog_path(@blog), method: :delete, data: {confirm: "本当にこの投稿を削除していいですか?"} %> |
    <%= link_to '戻る', main_path %>
  </div>



</div>

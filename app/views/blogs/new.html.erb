<div class="container">

  <%= form_with(model: @blog, local: true) do |form| %>

    <div class="title">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>

      <div class="time">
      <%= form.label :日時 %>
      <%= form.datetime_select :start_time %>
    </div>

    <div class="content">
      <%= form.label :content %>
      <%= form.text_field :content %>
    </div>


    <div class="submit">
      <%= form.submit %>
    </div>

  <% end %>

</div>

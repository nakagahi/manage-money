<header>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
      <a class="navbar-brand " href="/">Manage Money</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <ul class="navbar-nav">

          <% if logged_in? %>

            <li class="nav-item"><%= link_to "ホーム", main_path, class: "nav-link"%></li>
            <li class="nav-item"><%= link_to "プロフィール", current_user, class: "nav-link"%></li>
            <li class="nav-item"><%= link_to "ユーザ一覧", users_path, class: "nav-link"%></li>
            <li class="nav-item"><%= link_to "ログアウト", logout_path, method: :delete, class: "nav-link" %></li>

          <% else %>
            <li class="nav-item"><%= link_to "トップページ", root_url, class: "nav-link"%></li>
            <li class="nav-item"><%= link_to "新規登録", new_user_path, class: "nav-link"%></li>
            <li class="nav-item"><%= link_to "ログイン", login_url, class: "nav-link"%></li>

          <% end %>
        </ul>

      </div>
    </nav>

  </header>
  <% if !flash.nil? %>
    <div class="flash">
      <% flash.each do |key, value|%>
        <p class="alert alert-<%= key %>">
          <%= value %>
        </p>
      <% end %>

    </div>
  <% else %>

  <%end%>
